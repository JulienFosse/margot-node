<div class="container h-100 mt-5">
    <h2 class="text-center my-4">Créer un compte</h2>
    <div class="d-flex justify-content-center form_container">
        <form action="/user/register" method="POST" >
            <div class="input-group mb-3">
                <div class="input-group-append">
                    <span class="input-group-text"><i class="fas fa-user"></i></span>
                </div>
                <input type="email" name="email" class="form-control input_user" placeholder="email" value={{data.email}} >
            </div>

            <div class="input-group mb-2">
                <div class="input-group-append">
                    <span class="input-group-text"><i class="fas fa-key"></i></span>
                </div>
                <input type="password" name="password" class="form-control input_pass"  placeholder="mot de passe" value={{data.password}}>
            </div>

            

            <div class="d-flex justify-content-center mt-3 login_container">
                <button type="submit" name="button" class="btn btn-success login_btn mt-4">Créer le compte</button>
            </div>
        </form>
    </div>

    
</div>
</div>