<div class="modal fade" id="modifierReal{{_id}}" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Editer le devis de {{ this.nameDevis }} {{this.firstNameDevis}}</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">

                {{!--
                Formulaire------------------------------------
                --}}

                <form class="needs-validation " action="/{{_id}}/devis?_method=PUT" method="POST">

                    {{!-- Intitulé de la demande --}}

                    <div class="form-row row ">
                        <div class="col-md-6 mb-3 text-center mx-auto ">
                            <label for="validationTooltip01 ">Intitulé</label>
                            <input type="text " name="entitled" class="form-control " id="validationTooltip01 " value="{{this.entitled}} ">
                            <div class="valid-tooltip ">

                            </div>
                        </div>
                    </div>

                    <!-- Objet de la demande --->

                    <div class="form-row row ">
                        <div class="col-md-6 mb-3 text-center mx-auto ">
                            <label for="validationTooltip01 ">Objet de la
                                demande</label>
                            <input type="text " name="object" class="form-control " id="validationTooltip01 " value="{{this.object}} ">
                            <div class="valid-tooltip ">

                            </div>
                        </div>
                    </div>


                    <!-- Description --->

                    <div class="form-row ">
                        <div class="col-md-6 mb-3 text-center mx-auto ">
                            <label for="validationTooltip01 ">Description</label>
                            <input type="text" name="content" class="form-control " id="validationTooltip01 " value="{{this.content}} ">
                            <div class="valid-tooltip ">
                                Looks good!
                            </div>
                        </div>
                    </div>

                    <!-- Nom--->

                    <div class="form-group col-md-6 mb-3 text-center mx-auto ">
                        <label for="exampleFormControlTextarea1 ">Nom de famille</label>
                        <input type="text" name="nameDevis" class="form-control " id="validationTooltip01 " value="{{this.nameDevis}} ">
                    </div>

                    <!-- Prénom--->

                    <div class="form-group col-md-6 mb-3 text-center mx-auto ">
                        <label for="exampleFormControlTextarea1 ">Prénom</label>
                        <input type="text" name="firstNameDevis" class="form-control " id="validationTooltip01 " value="{{this.firstNameDevis}}">
                    </div>

                    <!-- Email--->

                    <div class="form-group col-md-6 mb-3 text-center mx-auto ">
                        <label for="exampleFormControlTextarea1 ">Email</label>
                        <input type="email" name="emailDevis" class="form-control " id="validationTooltip01 " value="{{this.emailDevis}}">
                    </div>



                    {{!-- bouton envoyer --}}

                    <div class="row ">
                        <div class="col-md-12 text-center mt-3 mb-1 ">
                            <button class="btn btn-dark " type="submit">Modifier le
                                devis</button>
                        </div>
                    </div>


                </form>
                <div class="modal-footer"></div>

                {{!-- /formulaire
                ------------------------------------------------------------------------------------------------------}}

            </div>

        </div>
    </div>
</div>