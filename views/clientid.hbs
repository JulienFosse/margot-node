<div class="container">
    <div class="row">
        <div class="col-md-12">
            <form action="/{{_id}}?_method=PUT" method="POST" class="">
                <div class="col-md-6 text-center my-4 mx-auto ">

                    <!-- Genre--->


                    <div class="form-row">
                        <div class="col-md-12 mb-3 ml-auto mr-auto ">
                            <label for="validationTooltip01 ">Genre</label>
                            <input type="text " name="gender" class="form-control " id="validationTooltip01 "
                                value="{{this.gender}}">
                            <div class="valid-tooltip ">

                            </div>
                        </div>
                    </div>

                    <!-- Nom --->

                    <div class="form-row row ">
                        <div class="col-md-12 mb-3 ml-auto mr-auto ">
                            <label for="validationTooltip01 ">Nom de Famille</label>
                            <input type="text " name="name" class="form-control " id="validationTooltip01 "
                                value="{{this.name}}">
                            <div class="valid-tooltip ">

                            </div>
                        </div>
                    </div>



                    <!-- Prénom --->

                    <div class="form-row ">
                        <div class="col-md-12 mb-3 text-center ml-auto mr-auto ">
                            <label for="validationTooltip01 ">Prénom</label>
                            <input type="text" name="firstName" class="form-control " id="validationTooltip01 "
                                value="{{this.firstName}}">
                            <div class="valid-tooltip ">
                                Looks good!
                            </div>
                        </div>
                    </div>

                    <!-- Email--->

                    <div class="form-group text-center ">
                        <label for="exampleFormControlTextarea1 ">Email</label>
                        <input type="email" name="email" class="form-control " id="validationTooltip01 " value="{{this.email}}">
                    </div>

                    <!-- Adresse--->

                    <div class="form-group text-center ">
                        <label for="exampleFormControlTextarea1 ">Adresse</label>
                        <input type="text" name="adress" class="form-control " id="validationTooltip01 " value="{{this.adress}}">
                    </div>

                    <!-- Téléphone--->

                    <div class="form-group text-center ">
                        <label for="exampleFormControlTextarea1 ">Téléphone</label>
                        <input type="text" name="phone" class="form-control" id="validationTooltip01 " value="{{this.phone}}">
                    </div>

                    <!-- Statut du client--->

                    <div class="form-group text-center ">
                        <label for="exampleFormControlTextarea1 ">Statut du client</label>
                        <input type="text" name="status" class="form-control " id="validationTooltip01 " value="{{this.status}}">
                    </div>

                    <!-- Statut de l'entreprise--->

                    <div class="form-group text-center ">
                        <label for="exampleFormControlTextarea1 ">Statut de l'entreprise</label>
                        <input type="text" name="statutEntreprise" class="form-control " id="validationTooltip01 "
                            value="{{this.statutEntreprise}}">
                    </div>

                    <!-- Raison sociale--->

                    <div class="form-group text-center ">
                        <label for="exampleFormControlTextarea1 ">Raison Sociale</label>
                        <input type="text" name="raisonSociale" class="form-control " id="validationTooltip01 "
                            value="{{this.raisonSociale}}">
                    </div>

                    <!-- N° de SIRET--->

                    <div class="form-group text-center ">
                        <label for="exampleFormControlTextarea1 ">N° de SIRET</label>
                        <input type="text" name="siret" class="form-control " id="validationTooltip01 " value="{{this.siret}}">
                    </div>


                    {{!-- bouton envoyer --}}

                    <div class="row ">
                        <div class="col-md-12 text-center mt-3 mb-1">
                            <button class="btn btn-dark " type="submit">modifier le client</button>
                        </div>
                    </div>


                </div>
            </form>
        </div>
    </div>
</div>